<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.savan.cloud" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.savan.cloud.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.savan.cloud.Otp"
            android:label="@string/title_activity_otp" >
        </activity>
        <activity
            android:name="com.example.savan.cloud.Menu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.example.savan.cloud.TextUpload"
            android:label="@string/title_activity_textupload" >
        </activity>
        <activity
            android:name="com.example.savan.cloud.ImageUpload"
            android:label="@string/title_activity_imageupload" >
        </activity>
        <activity
            android:name="com.example.savan.cloud.SignUp"
            android:label="@string/title_activity_signup" >
        </activity>
    </application>

</manifest>
